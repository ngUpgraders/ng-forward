{
    "version": "1.6.0",
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "outDir": "dist/",
        "sourceMap": true
    },
    "fileGlobs": [
        "./lib/**/*.ts",
        "./typings/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
